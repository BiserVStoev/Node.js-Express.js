<section id="featured">
    <h2>Latest article</h2>
    <article>
        {{#if latestArticle}}
        <h3>{{latestArticle.title}}</h3>
        {{#each latestArticle.splittedContent}}
        <p>{{this}}</p>
        {{/each}}
        <div class="controls">
            <a href="/article/{{latestArticle.id}}">Read more</a>
        </div>
        {{/if}}
    </article>

</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#each articles}}
        <li>
            <a href="/article/{{_id}}">{{title}}</a>
        </li>
        {{/each}}
    </ul>
</section>