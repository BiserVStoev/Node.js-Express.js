<section>
    <h2>Edit article
        <div class="controls">
            {{#if isLocked}}
                    {{#if isAdmin}}
                    <a href="/unlock/{{id}}">Unlock article</a>
                    {{/if}} 
                {{else}}
                    {{#if isAdmin}}
                    <a href="/lock/{{id}}">Lock article</a>
                    {{/if}} 
            {{/if}} 
        </div>
    </h2>
    {{#if error}}
    <p class="error">{{error}}</p>
    {{/if}}
    <div class="spacer">
        <form action="/article/{{id}}/edit" method="POST">
            <label>Article title</label>
            <h3>{{title}}</h3>
            <label for="content">Content</label>
            <textarea name="content">{{content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>