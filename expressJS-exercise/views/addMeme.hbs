<h1></h1>
    Add New Movie</h1>
<div class="container">
    <form action="/addMeme" enctype="multipart/form-data" method="POST">
        <label for="memeName">Name</label>
        <input type="text" id="memeName" name="memeName" placeholder="The name of the meme">

        <select name="genreSelect" id="genreSelect">
            {{#each tags}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>

        <label for="memePoster">Meme URL</label>
        <input type="file" id="memePoster" name="meme" placeholder="Link to a poster">
        <label for="memeDescription">Movie description</label>
        <textarea id="memeDescription" name="memeDescription" placeholder="Meme description" rows="10" cols="10"></textarea>
        <input type="submit" value="Submit">

    </form>
</div>

{{#if status}}
<div id="successBox"><h2 id="successMessage">Genre Added</h2></div>
{{/if}}